<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="30dp" android:orientation="horizontal"
    android:weightSum="1"
    android:layout_marginTop="7dp" >

    <TextView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:text="Super long question for test the layout???"
        android:textSize="15sp"
        android:id="@+id/questionText"
        android:lines="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editButton" />

    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/can"
        android:id="@+id/removeButton"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/draw"
        android:id="@+id/editButton"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/removeButton"
        android:layout_marginRight="5dp" />

</RelativeLayout>
